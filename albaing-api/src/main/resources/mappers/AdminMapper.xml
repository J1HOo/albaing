<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="패키지이름.파일명">

    <!-- 이하 모든 "select *" 구문 수정할 것-->
    <!-- 구문마다 목적, 개요 주석 달 것-->


    <!-- 개인 회원 조회 -->

    <!-- 개인 회원 조회 : 이름으로 검색 -->
    <!-- String userName(사용자명) 을 받아 일치하는 계정을 찾고, List<User>(조건을 만족하는 사용자 리스트)로 반환 -->
    <select id="adminSearchUserByName">
        select *
        from USERS
        where user_name = #{userName}
    </select>

    <!-- 개인 회원 조회 : 이메일으로 검색 -->
    <!-- String userEmail(이메일) 을 받아 일치하는 계정을 찾고, List<User>(조건을 만족하는 사용자 리스트)로 반환 -->
    <select id="adminSearchUserByEmail">
        select *
        from USERS
        where user_email = #{userEmail}
    </select>

    <!-- 개인 회원 조회 : 전화번호로 검색 -->
    <!-- String userPhone(전화번호) 을 받아 일치하는 계정을 찾고, List<User>(조건을 만족하는 사용자 리스트)로 반환 -->
    <select id="adminSearchUserByPhone">
        select *
        from USERS
        where user_phone = #{user_phone}
    </select>

    <!-- 개인 이력서 조회 -->


    <!-- 기업 회원 조회 -->

    <!-- 기업 회원 조회 : 기업명으로 검색 -->
    <!-- String companyName(기업명) 을 받아 일치하는 계정을 찾고, List<Company>(조건을 만족하는 회사 리스트)로 반환-->
    <select id="adminSearchCompanyByName">
        select *
        from COMPANIES
        where company_name = #{companyName}
    </select>

    <!-- 기업 회원 조회 : 대표자명의로 검색 -->
    <!-- String companyOwnerName(대표자 명의) 을 받아 일치하는 계정을 찾고, List<Company>(조건을 만족하는 회사 리스트)로 반환-->
    <select id="adminSearchCompanyByOwnerName">
        select *
        from COMPANIES
        where company_owner_name = #{companyOwnerName}
    </select>

    <!-- 기업 회원 조회 : 전화번호로 검색 -->
    <!-- String companyPhone(기업 전화번호) 을 받아 일치하는 계정을 찾고, List<Company>(조건을 만족하는 회사 리스트)로 반환-->
    <select id="adminSearchCompanyByPhone">
        select *
        from COMPANIES
        where company_phone = #{companyPhone}
    </select>
</mapper>